{erl_opts, [warn_missing_spec]}.

{deps, [
    {cowboy, "2.7.0"},
    {jiffy, "1.0.8"},
    {msgpack, "0.7.0"},
    {hackney, "1.17.4"}
]}.

{profiles, [
    {test, [
        {extra_src_dirs, [
            {"test", [{recursive, true}]}
        ]}
    ]}
]}.


{plugins, [
    {rebar3_lint,
        {git, "https://github.com/project-fifo/rebar3_lint.git", {tag, "v0.1.10"}}}
]}.

{elvis_output_format, plain}.
